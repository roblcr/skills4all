{% extends 'base.html.twig' %}

{% block title %}{{car.name}}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{car.name}}</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>Nombre de sièges</th>
                    <td>{{ car.nbSeats }}</td>
                </tr>
                <tr>
                    <th>Nombre de portes</th>
                    <td>{{ car.nbDoors }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ car.name }}</td>
                </tr>
                <tr>
                    <th>Coût</th>
                    <td>{{ car.cost }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ car.category }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_car_index') }}" class="btn btn-primary">Retour a la liste</a>

        <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-secondary">Editer la voiture</a>

        {{ include('car/_delete_form.html.twig') }}
    </div>
{% endblock %}
